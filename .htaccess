RewriteEngine On

# Cache busting
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.+)\.(\d+)\.(js|css|png|jpg|gif)$ $1.$3 [L]

# Redirect any directories/files not listed to index.php
RewriteCond $1 !^(index\.php|images|img|css|js|uploads|robots\.txt|favicon.ico)
RewriteRule ^(.*)$ /index.php/$1 [L]